.card.bg-base-100.shadow-xl.max-w-md.mx-auto
  .card-body
    %h1.text-2xl.font-bold.mb-4= t('.title')

    = form_with model: @city, local: true do |f|
      - if @city.errors.any?
        .alert.alert-error.mb-4
          %ul.list-disc.list-inside.text-sm
            - @city.errors.full_messages.each do |m|
              %li= m

      .form-control.mb-4
        = f.label :name, t('.name'), class: "label"
        = f.text_field :name,
                       placeholder: t('.placeholder'),
                       autofocus: true,
                       class: "input input-bordered w-full"

      .form-control
        = f.submit t('.create'), class: "btn btn-primary w-full"
